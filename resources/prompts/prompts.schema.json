{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Template Prompts",
    "properties": {
        "categories": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/category"
            }
        }
    },
    "$defs": {
        "category": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "prompts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/prompt"
                    }
                }
            },
            "required": ["name", "prompts"]
        },
        "prompt": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "process": {
                    "type": "boolean"
                },
                "form": {
                    "type": "boolean"
                },
                "template": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": ["string", "boolean"],
                            "description": "You can define the absolute path to your template as a string or use the default template by setting this to true."
                        },
                        "format": {
                            "type": "string"
                        }
                    },
                    "required": ["path", "format"]
                }
            },
            "required": ["text"]
        }
    },
    "required": ["categories"]
}
